# Runtime
PORT=3000
NODE_ENV=development
APP_SECRET=replace-with-long-random-secret

# Database
# 生产环境建议使用 Supabase Postgres 连接串（建议池化连接）
DATABASE_URL=
DB_SSL=true
DB_POOL_MAX=10

# Supabase Storage（用于代码图片持久化）
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_STORAGE_BUCKET=code-images

# WeChat Mini Program login (optional)
WECHAT_APPID=
WECHAT_SECRET=

# CORS (optional)
# CORS_ORIGIN=https://your-frontend-domain.com

# Cloudflare Pages function proxy target (Cloudflare 环境变量)
# VERCEL_BACKEND_URL=https://your-vercel-domain.vercel.app
